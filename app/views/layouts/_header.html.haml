              %span.caret
            %ul.dropdown-menu{ :role => "menu" }
              %li= link_to "All projects", projects_path
              %li= link_to "New project",  new_project_path
          %li.dropdown
            %a.dropdown-toggle{ :href => "#",
                                :data => { :toggle => "dropdown" } }
              Samples
              %span.caret
            %ul.dropdown-menu{ :role => "menu" }
              %li= link_to "All samples", samples_path
              %li= link_to "New sample",  new_sample_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ :href => "#",
                                :data => { :toggle => "dropdown" } }
              = current_user.name || 'Anonymous'
              %span.caret
            %ul.dropdown-menu{ :role => "menu" }
              %li
                = link_to "Profile", user_path(current_user)
              %li
                = link_to "Settings", edit_user_registration_path
              %li.divider
              - if can? :index, User
                %li
                  = link_to "Users management", users_path
                %li.divider
              %li
                = link_to "Logout", destroy_user_session_path,
                          :method => :delete
        - else
          %li
            %a{ :href => "#",
                :data => { :toggle => "modal", :target => "#login-modal" } }
              Login

