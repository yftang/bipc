.panel.panel-primary
  .panel-heading Setting properties
  .panel-body
    .form-group
      = f.label :acc, "Accession",
                :class => "col-sm-4 control-label"
      .col-sm-6.input-group
        = f.text_field :acc, :class => "form-control"
        %span.input-group-addon
          %span.glyphicon.glyphicon-pencil
    .form-group
      = f.label :start_date, "Start date",
                :class => "col-sm-4 control-label"
      .col-sm-6.input-group
        = f.text_field :start_date, :class => "form-control datepicker"
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar
    .form-group
      = f.label :deadline,
                :class => "col-sm-4 control-label"
      .col-sm-6.input-group
        = f.text_field :deadline, :class => "form-control datepicker"
        %span.input-group-addon
          %span.glyphicon.glyphicon-calendar

%br
.panel.panel-primary
  .panel-heading Adding customers
  .panel-body
    .form-group
      = f.label :customer_ids,
                "Customers",
                :class => "col-sm-4 control-label"
      .col-sm-6.input-group
        %select.form-control{ :name => "project[customer_ids][]",
                              :multiple => true }
          - @customers.pluck(:province).uniq.each do |pro|
            %optgroup{ :label => pro }
              - @customers.select { |c| c.province == pro }.each do |customer|
                %option{ :value => customer.id } #{customer.name}
        %span.input-group-addon
          %span.glyphicon.glyphicon-user

    = link_to "Need new customer?", new_customer_path,
              :class => "col-sm-offset-4"

%br
.panel.panel-primary
  .panel-heading Adding samples
  .panel-body
    .form-group
      = f.label :sample_ids,
                "Samples",
                :class => "col-sm-4 control-label"
      .col-sm-6.input-group
        %select.form-control{ :name => "project[sample_ids][]",
                              :multiple => true }
          - @samples.each do |sample|
            %option{ :value => sample.id } #{sample.name}
        %span.input-group-addon
          %span.glyphicon.glyphicon-leaf

    = link_to "Need new sample?", new_sample_path,
              :class => "col-sm-offset-4"

