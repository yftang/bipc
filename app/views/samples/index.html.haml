%h2 All Samples
%br

.btn-toolbar{ :role => "toolbar" }
  .btn-group
    - if can? :create, Sample
      %a.btn.btn-primary{ :href => new_sample_path }
        %span.glyphicon.glyphicon-plus
        New sample
    - if can? :destroy, Sample
      %button.btn.btn-primary#destroy-samples{:type => "button",
          :disabled => true,
          :onclick => "destroy_samples()"}
        %span.glyphicon.glyphicon-minus
        Remove sample(s)
%br

%table.table.table-striped#samples-table
  %tr
    - if can? :destroy, Sample
      %th.col-sm-1
    %th Name
    %th Received date
    %th Receiver
    %th Express
    %th Project(s)
  - @samples.each do |sample|
    = render 'sample', :sample => sample

= paginate @samples
