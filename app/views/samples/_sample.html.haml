%tr{ :id => "#{sample.id}" }
  - if can? :manage, sample
    %td
      = check_box_tag "sample_#{sample.id}", sample.id,
                      false, :class => "sample-selection"

  %td= link_to sample.name, sample

  %td= sample.received_date

  - if sample.receiver_id
    %td= link_to  sample.receiver_id,
                  user_path(User.find_by_id(sample.receiver_id))
  - else
    %td

  %td= sample.express_number

